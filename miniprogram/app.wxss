/**app.wxss**/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;

  width: 100%;
}

.origin {
  align-self: flex-start;
  margin-top: 12px;
  font-size: 24rpx;
  color: #0a484f;
  font-weight: 500;
  position: fixed;
  bottom: 29%;
  left: 60rpx;
  width: 500rpx;
}

.line {
  /* align-self: flex-start; */
  width: 200rpx;
  margin-top: 30px;
  height: 1rpx;
  position: fixed;
  bottom: 33%;
  left: 60rpx;
  background-color: #515859;
}

.lightbulb-main {
  left: 40rpx;
  bottom: 22.5%;
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  z-index: 100;
}
.lightbulb-main-loading {
  left: 40rpx;
  bottom: 22.5%;
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  z-index: 100;
  animation: bulbloading 2s infinite linear;
}

@keyframes bulbloading {
  from {
    opacity: 0.1;
  }
  10% {
    opacity: 1;
  }
  15% {
    opacity: 0.1;
  }
  40% {
    opacity: 1;
  }
  45% {
    opacity: 0.1;
  }
  50% {
    opacity: 1;
  }
  55% {
    opacity: 0.1;
  }

  to {
    opacity: 1;
  }
}

.digest-header {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  justify-content: space-between;
  color: #152d31;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.digest-header .date {
  flex: 1;
  /* display: inline-block; */
}
.digest-header .lights {
  display: inline-block;
  /* height: 40rpx; */
}

.light-count-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.digest-header .lightbulb {
  width: 40rpx;
  height: 40rpx;
  /* vertical-align: -4px; */
  display: inline-block;
}

.lights-count {
  left: 110rpx;
  bottom: 23.5%;
  width: 100rpx;
  text-align: left;
  position: fixed;
  color: #152d31;
  font-weight: bold;
