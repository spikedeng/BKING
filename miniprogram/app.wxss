}

image {
  width: 100%;
  height: 100%;
}

.digest-main-image {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #eaeaea;
  left: 0;
  right: 0;
  bottom: 0;
  height: 22%;
}

.digest-main-image .inner-wrapper {
